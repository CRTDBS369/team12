<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

  <!-- ======= Header and Navbar ======= -->
  <%- include('layouts/navbar'); -%>

  <main id="main" data-aos="fade-in">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
      <div class="container">
        <h2>My Page</h2>
        <p>내가 수강/개설한 강의를 모아 볼 수 있습니다. </p>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Courses Section ======= -->
    <section id="courses" class="courses">
      <div class="container" data-aos="fade-up">

          <button type="button" class="btn get-started-btn w-100" data-bs-toggle="modal" data-bs-target="#newLectureModal">새 강의 등록하기</button>
          <br>
          <br>
          
        <div class="row" data-aos="zoom-in" data-aos-delay="100">

          <% for (var i = 0; i < courses.length; i++ ) { %> 
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
            <div class="course-item">
              <img src= <%= courses[i].classImage %> class="img-fluid" alt="...">
              <div class="course-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4><%= courses[i].classCategory %></h4>
                  <p class="price"><%= courses[i].classid %></p>
                </div>

                <h3><a href="course-details.html"><%= courses[i].className %></a></h3>
                <p><%= courses[i].classDescription %></p>
                <div class="trainer d-flex justify-content-between align-items-center">
                  <div class="trainer-profile d-flex align-items-center">
                    <img src="assets/img/trainers/trainer-1.jpg" class="img-fluid" alt="">
                    <span><%= courses[i].professor%></span>
                  </div>
                  <div class="trainer-rank d-flex align-items-center">
                    <i class="bx bx-user"></i>&nbsp;<%= courses[i].studentCount %>
                    &nbsp;&nbsp;
                  </div>
                </div>
              </div>
            </div>
          </div> <!-- End Course Item-->
          <% } %>
        </div>

      </div>
    </section><!-- End Courses Section -->

  </main><!-- End #main -->

  <div class="modal fade" id="newLectureModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action = "/lecture/register" method = "POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">과목코드:</label>
              <input type="text" class="form-control" id="classid" name="classid">
            </div>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">과목명:</label>
              <input type="text" class="form-control" id="className" name="className">
            </div>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">과목 설명:</label>
              <input type="text" class="form-control" id="classDescription" name="classDescription">
            </div>
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">과목 분류:</label>
              <input type="text" class="form-control" id="classCategory" name="classCategory">
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">강의 이미지</label>
              <input class="form-control" type="file" id="image" name="image">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">등록</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  <!-- ======= Footer ======= -->
  <%- include('layouts/footer'); -%>

  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <%- include('layouts/scripts'); -%>

</body>

</html>